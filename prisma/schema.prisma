// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Manager {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  lastname String
  email    String
  password String

  @@map("managers")
}

model Parent {
  id              String @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  lastname        String
  studentFullName String
  grade           String
  schoolClass     String
  course          String
  email           String
  password        String

  @@map("parents")
}